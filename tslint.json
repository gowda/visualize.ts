{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "max-line-length": {
      "options": [80]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
            "arrays": "always",
            "objects": "always",
            "functions": "never"
        }
      }
    ],
    "no-unused-variable": [true, {"ignore-pattern": "^_"}]
  },
  "rulesDirectory": []
}